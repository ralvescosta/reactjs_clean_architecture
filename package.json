{
  "name": "reactjs_clean_architecture",
  "version": "1.0.0",
  "main": "index.js",
  "author": "ralvescosta <rafael.rac.mg@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node index",
    "dev": "webpack-dev-server --open --config webpack.dev.js",
    "build": "webpack --config webpack.prod.js",
    "test": "jest --passWithNoTests",
    "test:watch": "yarn test -- --watch",
    "test:staged": "yarn test -- --findRelatedTests src/",
    "test:ci": "yarn test -- --coverage",
    "test:coveralls": "yarn run test:ci && coveralls < coverage/lcov.info",
    "test:cypress": "cypress open",
    "check": "yarn-check -u -s"
  },
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.11",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "eslint": "^7.1.0",
    "eslint-config-standard-with-typescript": "11",
    "eslint-plugin-cypress": "^2.11.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-standard": "^4.0.1",
    "git-commit-msg-linter": "^2.4.2",
    "husk": "^0.5.3",
    "jest": "^25.5.4",
    "lint-staged": "^10.2.9",
    "ts-jest": "^25.5.1",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "react": "^16.13.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test",
      "pre-push": "yarn test:ci"
    }
  }
}
